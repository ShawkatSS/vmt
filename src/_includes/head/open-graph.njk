<meta property="og:title" content="{{ title or meta.title }}{{ meta.titleSuffix }}" />
<meta property="og:description" content="{{ description or meta.description }}" />
<meta property="og:type" content="website" />
<meta property="og:url" content="{{ meta.url }}{{ page.url }}" />
<meta property="og:image" content="{{ meta.url }}{{ meta.image }}" />

<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ title or meta.title }}{{ meta.titleSuffix }}">
<meta name="twitter:description" content="{{ description or meta.description }}">
<meta name="twitter:site" content="{{ meta.url }}{{ page.url }}">
<meta name="twitter:image" content="{{ meta.url }}{{ meta.image }}">
